<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.aulafirebase">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACESS.NETWORK.STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/primeirologo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/primeirologo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Controller.ActivityGrupos.AddIntegranteGrupo"></activity>
        <activity android:name=".Controller.ActivityGrupos.ListarGruposActivity" />
        <activity
            android:name=".Controller.ActivityGrupos.GrupoActivity"
            android:label="@string/title_activity_grupo"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".EnviarConviteActivity" />
        <activity android:name=".Controller.ActivityGrupos.AddGrupoActivity" />
        <activity android:name=".Controller.ActivityMovimentacao.AddGanhoActivity" />
        <activity android:name=".Controller.ActivityMovimentacao.AddDespesaActivity" />
        <activity
            android:name=".Controller.ActivityMovimentacao.MovimentacaoActivity"
            android:label="@string/title_activity_tarefa"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Controller.ActivityLogin.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>